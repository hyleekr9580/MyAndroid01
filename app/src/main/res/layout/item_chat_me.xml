<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_you"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/u" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickname_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이호영" />

            <TextView
                android:id="@+id/message_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/thm_chatroom_message_bubble_you_bg"
                android:text="ㅋㅋㅋㅋㅋㅋ" />

        </LinearLayout>

        <TextView
            android:id="@+id/time_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="5dp"
            android:text="99:99" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/time_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:text="99:99" />

        <TextView
            android:id="@+id/message_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/thm_chatroom_message_bubble_me_bg"
            android:text="asdfgwjsfldwl;askf;" />
    </LinearLayout>

</LinearLayout>